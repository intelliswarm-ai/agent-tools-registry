{
    "name": "trading",
    "description": "Execute trading operations",
    "endpoint": "/api/v1/tools/trading",
    "inputs": {
        "operation": {
            "type": "string",
            "description": "The trading operation to perform",
            "required": true,
            "enum": ["buy", "sell", "status"]
        },
        "symbol": {
            "type": "string",
            "description": "The trading symbol",
            "required": true
        },
        "quantity": {
            "type": "number",
            "description": "The quantity to trade",
            "required": false
        }
    },
    "outputs": {
        "status": {
            "type": "string",
            "description": "The status of the operation"
        },
        "message": {
            "type": "string",
            "description": "Detailed message about the operation"
        }
    },
    "tags": ["trading", "finance"]
} 